<html>
  <body>
    <h1>Edit country</h1>
    <form method="post">
      <label for="code">Code:</label></br>
      <input type="text" id="code" name="code" placeholder=<%= country.co_code %>></br>
      <label for="name">Name:</label></br>
      <input type="text" id="name" name="name" placeholder=<%= country.co_name %>></br>
      <label for="details">Details:</label></br>
      <textarea id="details" name="details" placeholder=<%= country.co_details %> rows="4" cols="32"</textarea></br>
      <input type="submit" value="Submit">
    </form>
    <a href="/">Home</a>
  </body>
</html>